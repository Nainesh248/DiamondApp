<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/all_background"
    android:layout_height="match_parent"
    tools:context=".activity.TipsandTricks">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adMobView"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/rl_main">
    <ImageView
        android:id="@+id/img_back"
        android:layout_width="@dimen/_40dp"
        android:layout_height="@dimen/_40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_20dp"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tip_tricks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/reem_kufi"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/_10dp"
        app:layout_constraintStart_toEndOf="@id/img_back"
        android:text="@string/tipsandtrick"
        android:textColor="@color/white"
        android:textSize="23dp" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:src="@drawable/line_design"
        android:layout_marginLeft="@dimen/_40dp"
        android:layout_marginRight="@dimen/_40dp"
        android:layout_below="@+id/rl_main"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25dp"
            android:layout_below="@+id/img_line"
            android:layout_marginTop="@dimen/_15dp"
            android:layout_marginRight="@dimen/_25dp"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/_5dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_getdevice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#171717"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/ll_getdevice"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_15dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_getdevice"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            android:scaleType="centerCrop"
                            android:padding="@dimen/_10dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_pin" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_getdevice1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/ll_getdevice">
                        <TextView
                            android:id="@+id/txt_getdevice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/reem_kufi"
                            android:text="@string/getdevice"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_20dp" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_exploremil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_getdevice"
                android:layout_marginTop="@dimen/_20dp"
                app:cardBackgroundColor="#171717"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/ll_exploremil"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_15dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_exploremil"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            android:scaleType="centerCrop"
                            android:padding="@dimen/_10dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_pin" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_exploremil1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/ll_exploremil">
                        <TextView
                            android:id="@+id/txt_exploremil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/reem_kufi"
                            android:text="@string/exploremil"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_20dp" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_payattention"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_exploremil"
                android:layout_marginTop="@dimen/_20dp"
                app:cardBackgroundColor="#171717"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/ll_payattention"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_15dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_payattention"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            android:scaleType="centerCrop"
                            android:padding="@dimen/_10dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_pin" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_payattention1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/ll_payattention">
                        <TextView
                            android:id="@+id/txt_payattention"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/reem_kufi"
                            android:text="@string/payattention"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_20dp" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_lookatthe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_payattention"
                android:layout_marginTop="@dimen/_20dp"
                app:cardBackgroundColor="#171717"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/ll_lookatthe"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_15dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_lookatthe"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            android:scaleType="centerCrop"
                            android:padding="@dimen/_10dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_pin" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_lookatthe1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/ll_lookatthe">
                        <TextView
                            android:id="@+id/txt_lookatthe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/reem_kufi"
                            android:text="@string/lookatthe"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_20dp" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_takecover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_lookatthe"
                android:layout_marginTop="@dimen/_20dp"
                app:cardBackgroundColor="#171717"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/ll_takecover"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_15dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_takecover"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            android:scaleType="centerCrop"
                            android:padding="@dimen/_10dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_pin" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_takecover1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/ll_takecover">
                        <TextView
                            android:id="@+id/txt_takecover"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/reem_kufi"
                            android:text="@string/takecover"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_20dp" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_usethevehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_takecover"
                android:layout_marginTop="@dimen/_20dp"
                app:cardBackgroundColor="#171717"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/ll_usethevehicle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_15dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_usethevehicle"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            android:scaleType="centerCrop"
                            android:padding="@dimen/_10dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_pin" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_usethevehicle1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/ll_usethevehicle">
                        <TextView
                            android:id="@+id/txt_usethevehicle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/reem_kufi"
                            android:text="@string/usethevehicle"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_20dp" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/adMobView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>