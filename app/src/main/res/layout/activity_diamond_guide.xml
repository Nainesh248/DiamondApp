<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bacfround"
    tools:context=".activity.DiamondGuideActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_5dp"
        android:layout_above="@+id/adMobView"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">
    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="@dimen/_100dp"
        android:layout_height="@dimen/_100dp"
        android:padding="@dimen/_5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_15dp"
        android:layout_marginLeft="@dimen/_15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo" />
        <TextView
            android:id="@+id/guide_dia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/reem_kufi"
            android:text="@string/guide_d"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_below="@+id/img_logo"
            android:textColor="@color/white"
            android:textSize="@dimen/_30dp" />

        <TextView
            android:id="@+id/for_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/reem_kufi"
            android:text="@string/for_free"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_below="@+id/guide_dia"
            android:textColor="@color/white"
            android:textSize="@dimen/_35dp" />

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15dp"
            android:src="@drawable/line_design"
            android:layout_marginLeft="@dimen/_30dp"
            android:layout_marginRight="@dimen/_30dp"
            android:layout_below="@+id/for_free"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_below="@+id/img_line"
            android:layout_marginTop="@dimen/_15dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/_5dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#14FFFFFF"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_border_result">
                <LinearLayout
                    android:id="@+id/ll_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_12dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_tips"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:scaleType="centerCrop"
                        android:layout_centerVertical="true"
                        android:src="@drawable/tip_guide" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_tips1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                   android:gravity="center_horizontal"
                    android:layout_toRightOf="@+id/ll_tips">
                <TextView
                    android:id="@+id/txt_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/reem_kufi"
                    android:text="@string/tipsandtrick"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25dp" />
                </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_weapon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_tips"
                android:layout_marginTop="@dimen/_20dp"
                app:cardBackgroundColor="#14FFFFFF"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_border_result">
                    <LinearLayout
                        android:id="@+id/ll_weapon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_12dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_weapon"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:scaleType="centerCrop"
                            android:layout_centerVertical="true"
                            android:src="@drawable/weapon_guide" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_weapon1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal"
                        android:layout_toRightOf="@+id/ll_weapon">
                        <TextView
                            android:id="@+id/txt_weapon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/reem_kufi"
                            android:text="@string/weapon_guide"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_25dp" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_character"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_weapon"
                android:layout_marginTop="@dimen/_20dp"
                app:cardBackgroundColor="#14FFFFFF"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_border_result">
                    <LinearLayout
                        android:id="@+id/ll_character"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_12dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_character"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:scaleType="centerCrop"
                            android:layout_centerVertical="true"
                            android:src="@drawable/character_guide" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_character1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal"
                        android:layout_toRightOf="@+id/ll_character">
                        <TextView
                            android:id="@+id/txt_character"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/reem_kufi"
                            android:text="@string/character_guide"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_25dp" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_character"
                android:layout_marginTop="@dimen/_20dp"
                app:cardBackgroundColor="#14FFFFFF"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_border_result">
                    <LinearLayout
                        android:id="@+id/ll_vehicle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_12dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_vehicle"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:scaleType="centerCrop"
                            android:layout_centerVertical="true"
                            android:src="@drawable/vehicles_guide" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_vehicle1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal"
                        android:layout_toRightOf="@+id/ll_vehicle">
                        <TextView
                            android:id="@+id/txt_vehicle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/reem_kufi"
                            android:text="@string/vehicle_guide"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_25dp" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_diamond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_vehicle"
                android:layout_marginTop="@dimen/_20dp"
                app:cardBackgroundColor="#14FFFFFF"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_border_result">
                    <LinearLayout
                        android:id="@+id/ll_diamond"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_12dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_diamond"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:scaleType="centerCrop"
                            android:layout_centerVertical="true"
                            android:src="@drawable/diamond_guide" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_diamond1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal"
                        android:layout_toRightOf="@+id/ll_diamond">
                        <TextView
                            android:id="@+id/txt_diamond"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/reem_kufi"
                            android:text="@string/diamond_guide"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_25dp" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/adMobView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>