<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_background"
    tools:context=".activity.DiamondGuide">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:layout_above="@+id/adMobView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/adMobView"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/rl_main">
    <ImageView
        android:id="@+id/img_back"
        android:layout_width="@dimen/_40dp"
        android:layout_height="@dimen/_40dp"
        android:layout_marginLeft="@dimen/_20dp"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/guide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/reem_kufi"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/diamond_guide"
        android:textColor="@color/white"
        android:textSize="23dp" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15dp"
        android:src="@drawable/line_design"
        android:layout_marginLeft="@dimen/_40dp"
        android:layout_marginRight="@dimen/_40dp"
       android:layout_below="@+id/rl_main"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_below="@+id/img_line"
            android:layout_marginTop="@dimen/_15dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/_5dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#14FFFFFF"
                app:cardCornerRadius="8dp">
                    <LinearLayout
                        android:id="@+id/ll_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal"
                        android:background="@drawable/round_corner"
                        android:layout_toRightOf="@+id/ll_detail">
                        <TextView
                            android:id="@+id/txt_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/reem_kufi"
                            android:padding="@dimen/_15dp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:text="@string/detail_dia"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15dp" />
                    </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_playgames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_detail"
                android:layout_marginTop="@dimen/_25dp"
                app:cardBackgroundColor="#171717"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/ll_playgames"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_15dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_playgames"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            android:scaleType="centerCrop"
                            android:padding="@dimen/_10dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_pin" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_playgames1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/ll_playgames">
                        <TextView
                            android:id="@+id/txt_playgames"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/reem_kufi"
                            android:text="@string/playgames"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_20dp" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_entergame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_playgames"
                android:layout_marginTop="@dimen/_20dp"
                app:cardBackgroundColor="#171717"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/ll_entergame"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_15dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_entergame"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            android:scaleType="centerCrop"
                            android:padding="@dimen/_10dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_pin" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_entergame1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/ll_entergame">
                        <TextView
                            android:id="@+id/txt_entergame"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/reem_kufi"
                            android:text="@string/entergame"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_20dp" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_openfreebox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_entergame"
                android:layout_marginTop="@dimen/_20dp"
                app:cardBackgroundColor="#171717"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/ll_openfreebox"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_15dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_openfreebox"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            android:scaleType="centerCrop"
                            android:padding="@dimen/_10dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_pin" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_openfreebox1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/ll_openfreebox">
                        <TextView
                            android:id="@+id/txt_openfreebox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/reem_kufi"
                            android:text="@string/openfreebox"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_20dp" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/adMobView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>