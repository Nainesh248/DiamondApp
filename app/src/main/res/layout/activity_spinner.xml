<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_background"
    tools:context=".activity.SpinnerActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/adMobView">

        <RelativeLayout
            android:id="@+id/rl_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_20dp"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10dp"
                android:fontFamily="@font/reem_kufi"
                android:text="@string/diamond_spinner"
                android:textColor="@color/white"
                android:textSize="23dp"
                app:layout_constraintTop_toTopOf="parent" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_main"
            android:layout_marginLeft="@dimen/_40dp"
            android:layout_marginTop="@dimen/_15dp"
            android:layout_marginRight="@dimen/_40dp"
            android:src="@drawable/line_design" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_line"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginTop="@dimen/_15dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginBottom="@dimen/_50dp"
            android:padding="@dimen/_5dp">

            <LinearLayout
                android:id="@+id/ll_dia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/round_corner">

                    <ImageView
                        android:id="@+id/img_dia"
                        android:layout_width="@dimen/_25dp"
                        android:layout_height="@dimen/_25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:padding="@dimen/_5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/diamond" />

                    <TextView
                        android:id="@+id/txt_diamond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_8dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:fontFamily="@font/reem_kufi"
                        android:paddingRight="@dimen/_5dp"
                        android:text="@string/zero0"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/round_corner">

                    <ImageView
                        android:id="@+id/img_shil"
                        android:layout_width="@dimen/_25dp"
                        android:layout_height="@dimen/_25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:padding="@dimen/_5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_shil" />

                    <TextView
                        android:id="@+id/txt_shil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_8dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:fontFamily="@font/reem_kufi"
                        android:paddingRight="@dimen/_5dp"
                        android:text="@string/zero0"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15dp" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_dia"
                android:fontFamily="@font/reem_kufi"
                android:layout_centerHorizontal="true"
                android:text="@string/zero0"
                android:layout_marginTop="@dimen/_15dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_15dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_score">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:id="@+id/imgspinner"
                        android:layout_width="500dp"
                        android:layout_height="400dp"
                        android:scaleType="centerCrop"
                        android:padding="@dimen/_50dp"
                        android:src="@drawable/ic_spin_board" />

                </RelativeLayout>
                <ImageView
                    android:id="@+id/img_down"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_centerHorizontal="true"
                    android:text="@string/zero0"
                    android:src="@drawable/ic_baseline_arrow_drop_down_24"
                    app:tint="@color/appcolor" />
            </RelativeLayout>
            <Button
                android:id="@+id/btn_spin"
                android:layout_width="@dimen/_120dp"
                android:layout_height="@dimen/_45dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/round_button"
                android:fontFamily="@font/reem_kufi"
                android:gravity="center"
                android:text="@string/spin"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/adMobView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>