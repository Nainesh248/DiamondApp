<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_background"
    tools:context=".activity.WeapoDetailActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:paddingBottom="@dimen/_5dp"
        android:layout_above="@+id/adMobView"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/rl_main">
                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_marginLeft="@dimen/_20dp"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/txt_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_toRightOf="@+id/img_back"
                    android:layout_toLeftOf="@+id/img_audio"
                    android:fontFamily="@font/reem_kufi"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/TOPIC"
                    android:textColor="@color/white"
                    android:textSize="23dp" />
                <ImageView
                    android:id="@+id/img_audio"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_marginRight="@dimen/_20dp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitCenter"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_audio_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </RelativeLayout>
            <ImageView
                android:id="@+id/img_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15dp"
                android:src="@drawable/line_design"
                android:layout_marginLeft="@dimen/_40dp"
                android:layout_marginRight="@dimen/_40dp"
                android:layout_below="@+id/rl_main"/>
            <RelativeLayout
                android:id="@+id/rl_left_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_25dp"
                android:layout_below="@+id/img_line"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_marginRight="@dimen/_25dp"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/_5dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_left"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/black"
                    app:cardCornerRadius="8dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/weapon_back_left">
                        <RelativeLayout
                            android:id="@+id/ll_left"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/img_left"
                                android:layout_width="155dp"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:padding="@dimen/_5dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_an94" />
                        </RelativeLayout>
                        <LinearLayout
                            android:id="@+id/ll_left1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="@dimen/_10dp"
                            android:layout_alignParentRight="true">
                            <Button
                                android:id="@+id/btn_left"
                                android:layout_width="130dp"
                                android:layout_height="@dimen/_30dp"
                                android:fontFamily="@font/reem_kufi"
                                android:gravity="center"
                                android:background="@drawable/blude_button"
                                android:text="@string/AN94"
                                android:layout_gravity="end"
                                android:layout_marginTop="@dimen/_10dp"
                                android:layout_marginRight="@dimen/_15dp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="@dimen/_15dp" />
                            <TextView
                                android:id="@+id/txt_lefttopic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15dp"
                                android:text="@string/an94topic"
                                android:layout_marginRight="@dimen/_15dp"
                                android:gravity="end"
                                android:textColor="@color/white"
                                android:fontFamily="@font/reem_kufi"
                                android:textSize="@dimen/_15dp"/>

                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_right"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150dp"
                    android:visibility="visible"
                    app:cardBackgroundColor="@color/black"
                    app:cardCornerRadius="8dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/weaopn_background">
                        <RelativeLayout
                            android:id="@+id/ll_right"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/img_right"
                                android:layout_width="155dp"
                                android:layout_height="match_parent"
                                android:padding="@dimen/_10dp"
                                android:layout_centerVertical="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_m4a1" />
                        </RelativeLayout>
                        <LinearLayout
                            android:id="@+id/ll_right1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="@dimen/_10dp"
                            android:layout_alignParentLeft="true">
                            <Button
                                android:id="@+id/btn_right"
                                android:layout_width="130dp"
                                android:layout_height="@dimen/_30dp"
                                android:fontFamily="@font/reem_kufi"
                                android:gravity="center"
                                android:background="@drawable/blude_button"
                                android:text="@string/M4A1"
                                android:layout_gravity="start"
                                android:layout_marginTop="@dimen/_10dp"
                                android:layout_marginLeft="@dimen/_15dp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="@dimen/_15dp" />
                            <TextView
                                android:id="@+id/txt_rightopic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10dp"
                                android:text="@string/m4a1topic"
                                android:layout_marginLeft="@dimen/_15dp"
                                android:gravity="start"
                                android:textColor="@color/white"
                                android:fontFamily="@font/reem_kufi"
                                android:textSize="@dimen/_15dp"/>

                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_left_right"
                android:layout_marginTop="@dimen/_25dp"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginRight="@dimen/_20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_20dp"
                    android:layout_marginRight="@dimen/_20dp"
                    android:background="@drawable/round_corner"
                    android:padding="@dimen/_10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_tipsdetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textAlignment="center"
                            android:fontFamily="@font/reem_kufi"
                            android:text="@string/shortdetail"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_18sp" />
                    </LinearLayout>

                </RelativeLayout>
                <ImageView
                    android:id="@+id/img_pre"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_back"
                    />
                <ImageView
                    android:id="@+id/img_next"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_next"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/adMobView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>